<div class="container col-8 margin-top">
  <h3 class="text-primary">Editando comentário</h3>
  <form action="/comentesobre/edit" method="POST" class="container col-8 margin-top">
    <div class="mb-3">
      <input type="hidden" name="id" value="{{comentesobre.id}}">
      <label for="titulo" class="form-label">Título</label>
      <input type="text" value="{{comentesobre.title}}" class="form-control" name="title" placeholder="Insira um texto"
        required>
    </div>
    <div class="mb-3">
      <label for="comentario" class="form-label">Comentário:</label>
      <textarea class="form-control" name="commentary" rows="6" placeholder="Faça seu comentário!"
        required>{{comentesobre.commentary}}</textarea>
    </div>
    <div class="mb-3">
      <input type="submit" value="Editar" class="btn btn-primary"></input>
    </div>
  </form>
</div>